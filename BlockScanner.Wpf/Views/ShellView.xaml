<Window x:Class="BlockScanner.Wpf.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <UniformGrid Columns="3" Grid.Row="0">
            <ComboBox ItemsSource="{Binding Path=Renderers}" SelectedItem="{Binding Path=SelectedRenderer}" />
            <Button x:Name="CreateScanner" Content="Create Single Source Scanner" />
            <ComboBox ItemsSource="{Binding Path=ValidDetectors}" SelectedItem="{Binding Path=SelectedDetector}" />
            <Button x:Name="BeginSelection" Content="Select Capture Area" />
            <Button x:Name="DumpScanArea" Content="Dump Scan (./Images/cap.bmp)" />
            <Button x:Name="ToggleConsole" Content="Toggle Console" />
            <Button x:Name="SingleScan" Content="SingleScan" />
            <Button x:Name="RunTestArea" Content="Test (Area x = 0, y = 0 , 400x400)" />
        </UniformGrid>
        <ContentControl x:Name="Scanner" Grid.Row="1"/>
        <ContentControl x:Name="SelectedRenderer" Grid.Row="2"/>
    </Grid>
</Window>