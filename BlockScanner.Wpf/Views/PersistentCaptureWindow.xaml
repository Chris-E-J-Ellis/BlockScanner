<Window x:Class="BlockScanner.Wpf.Views.PersistentCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BlockScanner.Wpf.Views"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Opacity=".3"
        AllowsTransparency="True"
        Background="Black"
        Title="CaptureWindow"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Canvas x:Name="canvas">
        <local:ResizableRegion x:Name="CaptureTest"/>
        <Button Content="OK" Width="100" Height="40" Canvas.Left="250" Click="Button_Click"/>
    </Canvas>
</Window>
